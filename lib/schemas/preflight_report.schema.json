{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://light-agentic-agent/schemas/preflight_report.schema.json",
  "title": "PreflightReport",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "run_id",
    "token_estimate",
    "cost_estimates",
    "p90_cost_usd",
    "p95_cost_usd",
    "approve",
    "reason",
    "recommended_caps",
    "chosen_model"
  ],
  "properties": {
    "run_id": { "type": "string", "minLength": 6 },
    "token_estimate": {
      "type": "object",
      "additionalProperties": false,
      "required": ["input_tokens", "output_tokens", "total_tokens"],
      "properties": {
        "input_tokens": { "type": "integer", "minimum": 0 },
        "output_tokens": { "type": "integer", "minimum": 0 },
        "total_tokens": { "type": "integer", "minimum": 0 }
      }
    },
    "cost_estimates": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["model", "input_cost_usd", "output_cost_usd", "total_cost_usd"],
        "properties": {
          "model": { "type": "string" },
          "input_cost_usd": { "type": "number", "minimum": 0 },
          "output_cost_usd": { "type": "number", "minimum": 0 },
          "total_cost_usd": { "type": "number", "minimum": 0 }
        }
      }
    },
    "p90_cost_usd": { "type": "number", "minimum": 0 },
    "p95_cost_usd": { "type": "number", "minimum": 0 },
    "approve": { "type": "boolean" },
    "reason": { "type": "string" },
    "recommended_caps": {
      "type": "object",
      "additionalProperties": false,
      "required": ["max_input_tokens", "max_output_tokens", "max_usd"],
      "properties": {
        "max_input_tokens": { "type": "integer", "minimum": 0 },
        "max_output_tokens": { "type": "integer", "minimum": 0 },
        "max_usd": { "type": "number", "minimum": 0, "maximum": 5 }
      }
    },
    "chosen_model": { "type": "string" }
  }
}
